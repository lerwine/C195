<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.VBox?>
<?import controls.DateTimeTableCellFactory?>
<?import controls.CustomerTableCellFactory?>
<?import controls.AppointmentTypeTableCellFactory?>

<VBox prefHeight="600.0" prefWidth="800.0" styleClass="outerContainer" stylesheets="@../../scheduler/defaultStyles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scene.home.HomeScene">
    <children>
        <MenuBar>
            <menus>
                <Menu fx:id="appointmentsMenu" mnemonicParsing="false" text="%appointments">
                    <items>
                        <MenuItem fx:id="newAppointmentMenuItem" mnemonicParsing="false" onAction="#newAppointmentMenuItemClick" text="%new" />
                        <MenuItem fx:id="allAppointmentsMenuItem" mnemonicParsing="false" onAction="#allAppointmentsMenuItemClick" text="%allAppointments" />
                    </items>
                </Menu>
                <Menu fx:id="customersMenu" mnemonicParsing="false" text="%customers">
                    <items>
                        <MenuItem fx:id="newCustomerMenuItem" mnemonicParsing="false" onAction="#newCustomerMenuItemClick" text="%new" />
                        <MenuItem fx:id="allCustomersMenuItem" mnemonicParsing="false" onAction="#allCustomersMenuItemClick" text="%allCustomers" />
                    </items>
                </Menu>
                <Menu fx:id="addressMenu" mnemonicParsing="false" text="%address">
                    <items>
                        <MenuItem fx:id="newCountryMenuItem" mnemonicParsing="false" onAction="#newCountryMenuItemClick" text="%newCountry" />
                        <MenuItem fx:id="newCityMenuItem" mnemonicParsing="false" onAction="#newCityMenuItemClick" text="%newCity" />
                        <MenuItem fx:id="newAddressMenuItem" mnemonicParsing="false" onAction="#newAddressMenuItemClick" text="%newAddress" />
                        <MenuItem fx:id="allCountriesMenuItem" mnemonicParsing="false" onAction="#allCountriesMenuItemClick" text="%allCountries" />
                    </items>
                </Menu>
                <Menu fx:id="usersMenu" mnemonicParsing="false" text="%users">
                    <items>
                        <MenuItem fx:id="newUserMenuItem" mnemonicParsing="false" onAction="#newUserMenuItemClick" text="%new" />
                        <MenuItem fx:id="allUsersMenuItem" mnemonicParsing="false" onAction="#allUsersMenuItemClick" text="%allUsers" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label fx:id="headingLabel" contentDisplay="CENTER" styleClass="header-section" text="%loadingData" />
        <TableView fx:id="todayAndFutureAppointmenstTableView" visible="false" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titleTableColumn" editable="false" text="%title">
                  <cellValueFactory>
                      <PropertyValueFactory property="title" />
                  </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="startTableColumn" editable="false" text="%start">
                  <cellValueFactory>
                      <PropertyValueFactory property="start" />
                  </cellValueFactory>
                  <cellFactory>
                      <DateTimeTableCellFactory />
                  </cellFactory>
                </TableColumn>
                <TableColumn fx:id="endTableColumn" editable="false" text="%end">
                  <cellValueFactory>
                      <PropertyValueFactory property="end" />
                  </cellValueFactory>
                  <cellFactory>
                      <DateTimeTableCellFactory />
                  </cellFactory>
                </TableColumn>
                <TableColumn fx:id="typeTableColumn" editable="false" text="%type">
                  <cellValueFactory>
                      <AppointmentTypeTableCellFactory />
                  </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="customerTableColumn" editable="false" text="%customer">
                  <cellValueFactory>
                      <PropertyValueFactory property="customer" />
                  </cellValueFactory>
                  <cellFactory>
                      <CustomerTableCellFactory />
                  </cellFactory>
                </TableColumn>
            </columns>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem fx:id="editAppointmentMenuItem" mnemonicParsing="false" text="%editAppointment" />
              </items>
            </ContextMenu>
         </contextMenu>
        </TableView>
    </children>
</VBox>
