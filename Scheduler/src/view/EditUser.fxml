<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="480.0" prefWidth="640.0" styleClass="outerContainer" stylesheets="@defaultStyles.css"
      fx:controller="controller.EditUserController" fx:id="outerPane"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <Label styleClass="header-section" text="Add New User" />
      <GridPane>
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" />
          <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="ALWAYS" />
            <RowConstraints minHeight="10.0" valignment="BOTTOM" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="userNameLabel" styleClass="hLeftFieldLabel" text="User Name:" />
            <TextField fx:id="userNameTextField" maxWidth="1.7976931348623157E308" onAction="#userNameChanged" styleClass="hFieldControl" GridPane.columnIndex="1" />
            <Label fx:id="userNameErrorMessage" styleClass="error" text="Label" textFill="#7f0000" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <CheckBox fx:id="changePasswordCheckBox" mnemonicParsing="false" onAction="#changePasswordCheckChanged" styleClass="hLeftFieldLabel" text="Password:" GridPane.rowIndex="2" />
            <PasswordField fx:id="passwordTextField" maxWidth="1.7976931348623157E308" onAction="#passwordChanged" styleClass="hFieldControl" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="confirmLabel" styleClass="hLeftFieldLabel" text="Confirm Password:" GridPane.rowIndex="3" />
            <PasswordField fx:id="confirmTextField" maxWidth="1.7976931348623157E308" onAction="#passwordChanged" styleClass="hFieldControl" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="passwordErrorMessage" styleClass="error" text="Label" textFill="#7f0000" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label fx:id="activeLabel" styleClass="hLeftFieldLabel" text="Label" GridPane.rowIndex="5" />
            <ComboBox fx:id="activeComboBox" maxWidth="1.7976931348623157E308" styleClass="hFieldControl" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="6">
              <buttons>
                <Button fx:id="saveChangesButton" mnemonicParsing="false" onAction="#saveChangesButtonClick" text="Add New" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClick" text="Cancel" />
              </buttons>
            </ButtonBar>
         </children>
      </GridPane>
    </children>
</VBox>
