<?xml version="1.0" encoding="UTF-8"?>

<?import scheduler.controls.CustomerTableCellFactory?>
<?import scheduler.controls.DateTimeTableCellFactory?>
<?import scheduler.controls.UserTableCellFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" styleClass="outerContainer" stylesheets="@../../scheduler/defaultStyles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduler.view.appointment.ManageAppointments">
    <children>
        <Label fx:id="headingLabel" style="-fx-label-padding: 0 0 8 0;" styleClass="header-section" text="%currentAndFutureAppointments" />
        <TableView fx:id="listingTableView" editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="%title">
                    <cellValueFactory>
                        <PropertyValueFactory property="title" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="%start">
                    <cellValueFactory>
                        <PropertyValueFactory property="start" />
                    </cellValueFactory>
                    <cellFactory>
                        <DateTimeTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="%end">
                    <cellValueFactory>
                        <PropertyValueFactory property="end" />
                    </cellValueFactory>
                    <cellFactory>
                        <DateTimeTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="%type">
                    <cellValueFactory>
                        <PropertyValueFactory property="type" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="%customer">
                    <cellValueFactory>
                        <PropertyValueFactory property="customer" />
                    </cellValueFactory>
                    <cellFactory>
                        <CustomerTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="%user">
                    <cellValueFactory>
                        <PropertyValueFactory property="user" />
                    </cellValueFactory>
                    <cellFactory>
                        <UserTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%createdOn" visible="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="createDate" />
                    </cellValueFactory>
                    <cellFactory>
                        <DateTimeTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%createdBy" visible="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="createdBy" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%updatedOn" visible="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastUpdate" />
                    </cellValueFactory>
                    <cellFactory>
                        <DateTimeTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="%updatedBy" visible="false">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastUpdateBy" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem fx:id="editMenuItem" mnemonicParsing="false" text="%edit" />
                        <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" text="%delete" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <ButtonBar>
            <buttons>
                <Button fx:id="newButton" mnemonicParsing="false" text="%new" />
            </buttons>
            <padding>
                <Insets bottom="8.0" right="8.0" />
            </padding>
        </ButtonBar>
    </children>
</VBox>
