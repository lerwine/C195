<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import scheduler.fx.DateTimeTableCellFactory?>
<?import scheduler.fx.ItemEditTableCellFactory?>
<?import scheduler.fx.LocaleCountryAndLanguageListCell?>
<?import scheduler.fx.LocaleCountryAndLanguageListCellFactory?>
<?import scheduler.fx.RelayCellValueFactory?>
<?import scheduler.fx.TimeZoneTableCellFactory?>
<?import scheduler.fx.WrappingTextTableCellFactory?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="mainFxmlClass"
         stylesheets="@../../defaultStyles.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label styleClass="leftControlLabel" text="%regionLanguage" />
                  <ComboBox fx:id="localeComboBox" maxWidth="1.7976931348623157E308" onAction="#onLocaleComboBoxAction"
                            styleClass="leftLabeledControl" GridPane.columnIndex="1">
                      <cellFactory>
                          <LocaleCountryAndLanguageListCellFactory />
                      </cellFactory>
                      <buttonCell>
                          <LocaleCountryAndLanguageListCell wrapText="true" />
                      </buttonCell>
                  </ComboBox>
                <Label fx:id="languageValidationLabel" text="%required" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <styleClass>
                        <String fx:value="validationMessage" />
                        <String fx:value="error" />
                    </styleClass>
                </Label>
            </children>
        </GridPane>
        <Label fx:id="citiesLabel" maxWidth="1.7976931348623157E308" styleClass="topControlLabel" text="%cities" />
        <TableView fx:id="citiesTableView" maxHeight="1.7976931348623157E308" onKeyReleased="#onCitiesTableViewKeyReleased"
                   prefHeight="50.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="96.0" prefWidth="-1.0" text="%nameColumnHeading">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                    <cellFactory>
                        <WrappingTextTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" maxWidth="1.7976931348623157E308" minWidth="96.0" prefWidth="-1.0" text="%timeZone">
                    <cellValueFactory>
                        <PropertyValueFactory property="timeZone" />
                    </cellValueFactory>
                    <cellFactory>
                        <TimeZoneTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" minWidth="96.0" prefWidth="-1.0" text="%createdOn">
                    <cellValueFactory>
                        <PropertyValueFactory property="createDate" />
                    </cellValueFactory>
                    <cellFactory>
                        <DateTimeTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" minWidth="96.0" prefWidth="-1.0" text="%createdBy">
                    <cellValueFactory>
                        <PropertyValueFactory property="createdBy" />
                    </cellValueFactory>
                    <cellFactory>
                        <WrappingTextTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" minWidth="96.0" prefWidth="-1.0" text="%updatedOn">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastModifiedDate" />
                    </cellValueFactory>
                    <cellFactory>
                        <DateTimeTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" minWidth="96.0" prefWidth="-1.0" text="%updatedBy">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastModifiedBy" />
                    </cellValueFactory>
                    <cellFactory>
                        <WrappingTextTableCellFactory />
                    </cellFactory>
                </TableColumn>
                <TableColumn editable="false" maxWidth="64.0" minWidth="64.0" prefWidth="64.0" sortable="false">
                    <cellValueFactory>
                        <RelayCellValueFactory />
                    </cellValueFactory>
                    <cellFactory>
                        <ItemEditTableCellFactory onItemActionRequest="#onItemActionRequest" />
                    </cellFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onCityEditMenuItemAction" text="%open">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="ENTER" control="UP" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#onCityDeleteMenuItemAction" text="%delete">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DELETE" control="UP" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <ButtonBar fx:id="newButtonBar">
            <buttons>
                <Button mnemonicParsing="false" onAction="#onNewButtonAction" text="New City" />
            </buttons>
        </ButtonBar>
    </children>
</fx:root>
