<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import scheduler.controls.AmPmListCell?>
<?import scheduler.controls.AmPmListCellFactory?>
<?import scheduler.controls.TimeZoneListCell?>
<?import scheduler.controls.TimeZoneListCellFactory?>

<GridPane alignment="CENTER" stylesheets="@../../defaultStyles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduler.view.appointment.DateRange">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <HBox GridPane.columnSpan="2" GridPane.valignment="BOTTOM">
            <children>
                <Label alignment="BOTTOM_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="topControlLabel" text="%startLabelText" HBox.hgrow="ALWAYS" />
                <Button fx:id="checkConflictsButton" mnemonicParsing="false" styleClass="small-button" text="%check">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Button>
                <Button fx:id="showConflictsButton" layoutX="448.0" layoutY="10.0" mnemonicParsing="false" styleClass="small-button" text="%show">
                    <font>
                        <Font size="10.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="4.0" />
                    </HBox.margin>
                </Button>
            </children>
         <GridPane.margin>
            <Insets top="6.0" />
         </GridPane.margin>
        </HBox>
        <DatePicker fx:id="startDatePicker" styleClass="topLabeledControl" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets right="8.0" />
            </GridPane.margin>
        </DatePicker>
        <Label fx:id="startValidationLabel" styleClass="formControlValidationMessage" text="%required" GridPane.columnSpan="2" GridPane.rowIndex="2" />
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="8.0" />
            </GridPane.margin>
            <children>
                <TextField fx:id="startHourTextField" prefWidth="75.0" promptText="%hour" styleClass="topLabeledControl" />
                <Label text=":" />
                <TextField fx:id="startMinuteTextField" minWidth="75.0" prefWidth="75.0" promptText="%minutes" styleClass="topLabeledControl" />
                <ComboBox fx:id="amPmComboBox" styleClass="topLabeledControl">
                    <cellFactory>
                        <AmPmListCellFactory />
                    </cellFactory>
                    <buttonCell>
                        <AmPmListCell />
                    </buttonCell>
                </ComboBox>
            </children>
        </HBox>
        <Label styleClass="topControlLabel" text="%duration" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets top="6.0" />
            </GridPane.margin>
        </Label>
        <HBox GridPane.rowIndex="4">
            <children>
                <TextField fx:id="durationHourTextField" minWidth="75.0" prefWidth="75.0" promptText="%hours" styleClass="topLabeledControl" />
                <Label text=":" />
                <TextField fx:id="durationMinuteTextField" minWidth="75.0" prefWidth="75.0" promptText="%minutes" styleClass="topLabeledControl" />
            </children>
            <GridPane.margin>
                <Insets right="8.0" />
            </GridPane.margin>
        </HBox>
        <Label styleClass="topControlLabel" text="%timeZone" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="8.0" top="6.0" />
            </GridPane.margin>
        </Label>
        <ComboBox fx:id="timeZoneComboBox" maxWidth="1.7976931348623157E308" minWidth="125.0" styleClass="topLabeledControl" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets left="8.0" />
            </GridPane.margin>
            <cellFactory>
                <TimeZoneListCellFactory />
            </cellFactory>
            <buttonCell>
                <TimeZoneListCell />
            </buttonCell>
        </ComboBox>
        <Label fx:id="durationValidationLabel" styleClass="formControlValidationMessage" text="%required" GridPane.columnSpan="2" GridPane.rowIndex="5" />
        <Label fx:id="localTimeLabel" text="%localTime" GridPane.columnSpan="2" GridPane.rowIndex="6">
         <styleClass>
            <String fx:value="topControlLabel" />
            <String fx:value="collapsed" />
         </styleClass></Label>
        <Label fx:id="localTimeValue" GridPane.columnSpan="2" GridPane.rowIndex="7">
         <styleClass>
            <String fx:value="topLabeledControl" />
            <String fx:value="collapsed" />
         </styleClass></Label>
    </children>
</GridPane>
