<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import scheduler.view.appointment.MonthGridPane?>

<fx:root prefHeight="559.0" prefWidth="884.0" styleClass="mainFxmlClass" stylesheets="@../../defaultStyles.css" type="StackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox>
            <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label styleClass="leftControlLabel" text="%year" />
                  <Spinner fx:id="yearSpinner" styleClass="leftLabeledControl" />
                  <Label styleClass="innerLeftControlLabel" text="%month" />
                  <ComboBox fx:id="monthComboBox" prefWidth="150.0" styleClass="leftLabeledControl" />
                  <Button fx:id="runButton" mnemonicParsing="false" onAction="#onRunButtonAction" text="%run">
                     <HBox.margin>
                        <Insets left="8.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </HBox>
                <Label fx:id="monthNameLabel" styleClass="page-heading" text="January" />
            <MonthGridPane fx:id="monthGridPane" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</fx:root>
