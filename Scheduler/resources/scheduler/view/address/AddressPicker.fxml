<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import scheduler.fx.CityListCellFactory?>
<?import scheduler.fx.CityListCell?>
<?import scheduler.fx.CountryListCellFactory?>
<?import scheduler.fx.CountryListCell?>

<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="translucentGrayBg" stylesheets="@../../defaultStyles.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </BorderPane.margin>
         <center>
                <SplitPane dividerPositions="0.5" maxHeight="-Infinity">
                    <items>
                        <VBox>
                            <children>
                                <Label styleClass="topControlLabel" text="%country" />
                                <ComboBox fx:id="countryComboBox" maxWidth="1.7976931348623157E308" onAction="#onCountryComboBoxAction" styleClass="topLabeledControl">
                                    <cellFactory>
                                        <CountryListCellFactory />
                                    </cellFactory>
                                    <buttonCell>
                                        <CountryListCell />
                                    </buttonCell>
                                </ComboBox>
                                <Label fx:id="countryWarningLabel" styleClass="warningMessage" text="%countryNotSelected" />
                                <Label styleClass="topControlLabel" text="%city">
                                    <VBox.margin>
                                        <Insets top="16.0" />
                                    </VBox.margin>
                                </Label>
                                <ComboBox fx:id="cityComboBox" maxWidth="1.7976931348623157E308" onAction="#onCityComboBoxAction" styleClass="topLabeledControl">
                                    <cellFactory>
                                        <CityListCellFactory />
                                    </cellFactory>
                                    <buttonCell>
                                        <CityListCell />
                                    </buttonCell>
                                </ComboBox>
                                <Label fx:id="cityWarningLabel" styleClass="warningMessage" text="%cityNotSelected" />
                            </children>
                            <padding>
                                <Insets left="8.0" right="8.0" />
                            </padding>
                        </VBox>
                        <TableView fx:id="addressesTableView" maxHeight="-Infinity" tableMenuButtonVisible="true">
                            <columns>
                                <TableColumn id="addressLines" editable="false" maxWidth="1.7976931348623157E308" minWidth="40.0" prefWidth="-1.0" text="%street" />
                                <TableColumn id="postalCode" editable="false" maxWidth="-1.0" minWidth="72.0" prefWidth="-1.0" text="%postalCode" />
                                <TableColumn id="phone" editable="false" maxWidth="-1.0" minWidth="90.0" prefWidth="-1.0" text="%phoneNumber" />
                                <TableColumn editable="false" maxWidth="-1.0" minWidth="75.0" prefWidth="-1.0" text="%createdOn" visible="false" />
                                <TableColumn editable="false" maxWidth="-1.0" minWidth="75.0" prefWidth="-1.0" text="%createdBy" visible="false" />
                                <TableColumn editable="false" maxWidth="-1.0" minWidth="75.0" prefWidth="-1.0" text="%updatedOn" visible="false" />
                                <TableColumn editable="false" maxWidth="-1.0" minWidth="75.0" prefWidth="-1.0" text="%updatedBy" visible="false" />
                            </columns>
                            <padding>
                                <Insets left="8.0" right="8.0" />
                            </padding>
                        </TableView>
                    </items>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
                </SplitPane>
         </center>
         <top>
                <Label alignment="CENTER" styleClass="popup-heading" text="%selectAddress" BorderPane.alignment="CENTER" />
         </top>
         <styleClass>
            <String fx:value="mainFxmlClass" />
            <String fx:value="bordered" />
         </styleClass>
         <bottom>
                <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                        <Button fx:id="selectButton" mnemonicParsing="false" onAction="#onSelectButtonAction" text="%select" />
                        <Button mnemonicParsing="false" onAction="#onCancelButtonAction" text="%cancel" />
                    </buttons>
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </BorderPane.margin>
                </ButtonBar>
         </bottom>
      </BorderPane>
    </center>
</fx:root>
