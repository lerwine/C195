<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="mainFxmlClass" stylesheets="@../defaultStyles.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label styleClass="h1" text="Upcoming Appointments" />
        <TextFlow>
            <children>
                <Text fx:id="nextAppointmentLeadText" strokeType="OUTSIDE" strokeWidth="0.0" text="Loading data. Please wait..." />
                <Hyperlink fx:id="nextAppointmentHyperlink" onAction="#onNextAppointmentHyperlinkAction" styleClass="collapsed" />
                <Text fx:id="nextAppointmentAppendLabel" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="collapsed" text=" with " />
            <Hyperlink fx:id="nextAppointmentCustomerHyperlink" onAction="#onNextAppointmentCustomerHyperlinkAction" styleClass="collapsed" />
            <Text fx:id="nextAppointmentTerminalText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="collapsed" />
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </TextFlow>
        <Label styleClass="h2-alt" text="Upcoming Appointment Counts">
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
        <HBox>
            <children>
                <Label styleClass="leftControlLabel" text="Today:" />
                <Label fx:id="appointmentsTodayLabel" styleClass="leftLabeledControl" text="?">
                    <HBox.margin>
                        <Insets left="4.0" />
                    </HBox.margin>
                </Label>
                <Label styleClass="leftControlLabel" text="This Week:">
                    <HBox.margin>
                        <Insets left="16.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="appointmentsThisWeekLabel" styleClass="leftLabeledControl" text="?">
                    <HBox.margin>
                        <Insets left="4.0" />
                    </HBox.margin>
                </Label>
                <Label styleClass="leftControlLabel" text="Tomorrow:">
                    <HBox.margin>
                        <Insets left="16.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="appointmentsTomorrowLabel" styleClass="leftLabeledControl" text="?">
                    <HBox.margin>
                        <Insets left="4.0" />
                    </HBox.margin>
                </Label>
                <Label styleClass="leftControlLabel" text="Next Week:">
                    <HBox.margin>
                        <Insets left="16.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="appointmentsNextWeekLabel" styleClass="leftLabeledControl" text="?">
                    <HBox.margin>
                        <Insets left="4.0" />
                    </HBox.margin>
                </Label>
                <Label styleClass="leftControlLabel" text="This Month:">
                    <HBox.margin>
                        <Insets left="16.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="appointmentsThisMonthLabel" styleClass="leftLabeledControl" text="?">
                    <HBox.margin>
                        <Insets left="4.0" />
                    </HBox.margin>
                </Label>
            <VBox alignment="TOP_RIGHT" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
               <children>
                  <HBox>
                     <children>
                            <Label styleClass="leftControlLabel" text="Next Month:" />
                            <Label fx:id="appointmentsNextMonthLabel" styleClass="leftLabeledControl" text="?">
                                <HBox.margin>
                                    <Insets left="4.0" />
                                </HBox.margin>
                            </Label>
                     </children>
                  </HBox>
                    <Button mnemonicParsing="false" onAction="#onRefreshButtonAction" styleClass="small-control" text="Refresh" />
               </children>
            </VBox>
            </children>
        </HBox>
        <Label styleClass="h1" text="Common Tasks">
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
        <Label styleClass="h2-alt" text="Viewing Appointments">
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
        <TextFlow>
            <children>
                <Text text="The " />
                <Text styleClass="refNameText" text="&quot;" />
                <Text styleClass="refNameText" text="%appointments" />
                <Text styleClass="refNameText" text="&quot;" />
                <Text text=" menu dropdown lets you view listings of appointments.;" />
            </children>
        </TextFlow>
        <VBox>
            <children>
                <Label styleClass="h3" text="Calendar Views" />
                <TextFlow>
                    <children>
                        <Text text="The " />
                        <Hyperlink onAction="#onByWeekHyperlinkAction" text="%weeklyCalendar" />
                        <Text text=" menu item shows a weekly calendar of appointments, and " />
                        <Hyperlink onAction="#onByMonthHyperlinkAction" text="%monthlyCalendar" />
                        <Text text=" shows all appointments for a given month." />
                    </children>
                </TextFlow>
                <Label styleClass="h3" text="Tabular Listings">
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </Label>
                <TextFlow>
                    <children>
                        <Text text="The " />
                        <Hyperlink onAction="#onMyCurrentAndUpcomingHyperlinkAction" text="%myCurrentAndUpcoming" />
                        <Text text=" menu item shows your appointments for today as well as upcoming appointments. The " />
                        <Hyperlink onAction="#onAllAppointmentsHyperlinkAction" text="%allAppointments" />
                        <Text text=" menu item shows all appointments." />
                    </children>
                </TextFlow>
            </children>
            <VBox.margin>
                <Insets left="16.0" />
            </VBox.margin>
        </VBox>
        <Label styleClass="h2-alt" text="Adding Appointments">
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
        <TextFlow>
            <children>
                <Text text="Select " />
                <Hyperlink onAction="#onNewAppointmentHyperlinkAction" text="&quot;New&quot;" />
                <Text text=" from the " />
                <Text styleClass="refNameText" text="&quot;Appointments&quot;" />
                <Text text=" menu&#10;" />
                <Text styleClass="h3" text="&#9;or" />
                <Text text="&#10;Use the " />
                <Text styleClass="refNameText" text="&quot;Customers&quot;" />
                <Text text=" menu dropdown to open a " />
                <Hyperlink onAction="#onCustomerListingHyperlinkAction" text="customer listing" />
                <Text text=". Then, after opening the customer record, and click the " />
                <Text styleClass="refNameText" text="&quot;Add Appointment&quot;" />
                <Text text=" button at the bottom." />
            </children>
        </TextFlow>
        <Label styleClass="h2-alt" text="Appointment Reporting">
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
        <TextFlow>
            <children>
                <Text text="From the " />
                <Text styleClass="refNameText" text="&quot;Reports&quot;" />
                <Text text=" menu dropdown, select " />
                <Hyperlink onAction="#onTypesByMonthHyperlinkAction" text="Types by Month" />
                <Text text=" to see a bar chart showing the number of appointments for each apointment type in a given month. Use the " />
                <Hyperlink onAction="#onConsultantScheduleHyperlinkAction" text="Consultant Schedule" />
                <Text text=" to see appointment schedule reports for each consultant. The " />
                <Hyperlink onAction="#onByRegionHyperlinkAction" text="Appointments by Region" />
                <Text text=" menu option allows you to generate a pie chart of the customer nationalities for appointments in a givcen time period." />
            </children>
        </TextFlow>
        <Label styleClass="h2-alt" text="Manage Customers">
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
        <TextFlow>
            <children>
                <Text text="Use the " />
                <Text styleClass="refNameText" text="&quot;Customers&quot;" />
                <Text text=" menu to view a " />
                <Hyperlink onAction="#onCustomerListingHyperlinkAction" text="list of customers" />
                <Text text="&#10;" />
                <Text styleClass="h3" text="&#9;or" />
                <Text text="&#10;Use the " />
                <Text styleClass="refNameText" text="&quot;Manage Addresses&quot;" />
                <Text text=" menu to view a " />
                <Hyperlink onAction="#onCountryListingHyperlinkAction" text="list of countries" />
                <Text text=". You can then select the city and address to view customers at that specific address." />
            </children>
        </TextFlow>
        <Label styleClass="h2-alt" text="Manage Consultants">
            <VBox.margin>
                <Insets top="8.0" />
            </VBox.margin>
        </Label>
        <TextFlow>
            <children>
                <Text text="Use the " />
                <Text styleClass="refNameText" text="&quot;Consultants&quot;" />
                <Text text=" menu to view a " />
                <Hyperlink onAction="#onUserListingHyperlinkAction" text="list of consultants" />
                <Text text="." />
            </children>
        </TextFlow>
    </children>
</fx:root>
