<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import scheduler.controls.DateTimeTableCellFactory?>
<?import scheduler.controls.ItemEditTableCellFactory?>
<?import scheduler.controls.RelayCellValueFactory?>


<fx:root fx:id="rootStackPane" type="StackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="559.0" prefWidth="884.0" styleClass="mainFxmlClass" stylesheets="@../../defaultStyles.css">
          <children>
              <StackPane>
                  <children>
                      <Label fx:id="headingLabel" maxWidth="1.7976931348623157E308" styleClass="page-heading" text="Active Customers" wrapText="true" />
                      <Button fx:id="helpButton" mnemonicParsing="false" styleClass="symbol-button" text="❓" StackPane.alignment="CENTER_RIGHT">
                          <StackPane.margin>
                              <Insets right="8.0" />
                          </StackPane.margin>
                      </Button>
                  </children>
              </StackPane>
              <Label fx:id="subHeadingLabel" maxWidth="1.7976931348623157E308" styleClass="collapsed" wrapText="true" VBox.vgrow="SOMETIMES" />
              <TableView fx:id="listingTableView" VBox.vgrow="ALWAYS">
                  <columns>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%customerName">
                          <cellValueFactory>
                              <PropertyValueFactory property="name" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%address">
                          <cellValueFactory>
                              <PropertyValueFactory property="addressLines" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%city">
                          <cellValueFactory>
                              <PropertyValueFactory property="cityName" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%postalCode">
                          <cellValueFactory>
                              <PropertyValueFactory property="postalCode" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%country">
                          <cellValueFactory>
                              <PropertyValueFactory property="countryName" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%phone">
                          <cellValueFactory>
                              <PropertyValueFactory property="phone" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%active">
                          <cellValueFactory>
                              <PropertyValueFactory property="active" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%createdOn" visible="false">
                          <cellValueFactory>
                              <PropertyValueFactory property="createDate" />
                          </cellValueFactory>
                          <cellFactory>
                              <DateTimeTableCellFactory />
                          </cellFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%createdBy" visible="false">
                          <cellValueFactory>
                              <PropertyValueFactory property="createdBy" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%updatedOn" visible="false">
                          <cellValueFactory>
                              <PropertyValueFactory property="lastUpdate" />
                          </cellValueFactory>
                          <cellFactory>
                              <DateTimeTableCellFactory />
                          </cellFactory>
                      </TableColumn>
                      <TableColumn editable="false" minWidth="-1.0" prefWidth="-1.0" text="%updatedBy" visible="false">
                          <cellValueFactory>
                              <PropertyValueFactory property="lastUpdateBy" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn editable="false" maxWidth="-1.0" minWidth="76.0" prefWidth="76.0" sortable="false" text="%editDelete">
                          <cellValueFactory>
                              <RelayCellValueFactory />
                          </cellValueFactory>
                          <cellFactory>
                              <ItemEditTableCellFactory fx:id="itemEditTableCellFactory" />
                          </cellFactory>
                      </TableColumn>
                  </columns>
                  <contextMenu>
                      <ContextMenu>
                          <items>
                              <MenuItem fx:id="editMenuItem" mnemonicParsing="false" text="%edit" />
                              <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" text="%delete" />
                          </items>
                      </ContextMenu>
                  </contextMenu>
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
              </TableView>
              <ButtonBar>
                  <buttons>
                      <Button fx:id="newButton" mnemonicParsing="false" text="%new" />
                  </buttons>
                  <padding>
                      <Insets bottom="8.0" right="8.0" />
                  </padding>
              </ButtonBar>
          </children>
      </VBox>
   </children>
</fx:root>
