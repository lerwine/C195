<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootBorderPane" prefHeight="600.0" prefWidth="900.0" styleClass="translucentGrayBg" stylesheets="@../defaultStyles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduler.view.HelpContent">
    <center>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" BorderPane.alignment="CENTER">
            <top>
                <Label fx:id="titleLabel" styleClass="popup-heading" text="%schedulerHelp" BorderPane.alignment="CENTER" />
            </top>
            <bottom>
                <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#onCloseButtonAction" text="%close" />
                    </buttons>
                    <BorderPane.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" />
                    </BorderPane.margin>
                </ButtonBar>
            </bottom>
            <styleClass>
                <String fx:value="mainFxmlClass" />
                <String fx:value="bordered" />
            </styleClass>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <effect>
            <DropShadow offsetX="5.0" offsetY="5.0" />
         </effect>
         <center>
            <ScrollPane fx:id="contentScrollPane" pannable="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" top="8.0" />
               </BorderPane.margin>
               <padding>
                  <Insets right="8.0" />
               </padding>
            </ScrollPane>
         </center>
        </BorderPane>
    </center>
</BorderPane>
