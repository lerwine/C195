<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootBorderPane" prefHeight="600.0" prefWidth="900.0" styleClass="translucentGrayBg" stylesheets="@../defaultStyles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="scheduler.view.AppointmentAlert">
    <center>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" BorderPane.alignment="CENTER">
            <center>
            <ScrollPane pannable="true">
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" top="8.0" />
               </BorderPane.margin>
               <content>
                      <VBox fx:id="appointmentAlertsVBox" spacing="8.0" />
               </content>
               <padding>
                  <Insets right="8.0" />
               </padding>
            </ScrollPane>
            </center>
            <top>
                <Label styleClass="popup-heading" text="%appointmentReminder" BorderPane.alignment="CENTER" />
            </top>
            <bottom>
                <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#onDismissAllAppointmentAlerts" text="%dismissAll" />
                    </buttons>
                    <BorderPane.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" />
                    </BorderPane.margin>
                </ButtonBar>
            </bottom>
            <styleClass>
                <String fx:value="mainFxmlClass" />
                <String fx:value="bordered" />
            </styleClass>
         <effect>
            <DropShadow offsetX="10.0" offsetY="10.0" />
         </effect>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </BorderPane>
    </center>
</BorderPane>
