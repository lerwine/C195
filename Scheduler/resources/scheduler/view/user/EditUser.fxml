                    <GridPane.margin>
                        <Insets top="16.0" />
                    </GridPane.margin>
                </Label>
                <ComboBox fx:id="activeComboBox" maxWidth="1.7976931348623157E308" styleClass="formLabeledControl" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets top="16.0" />
                    </GridPane.margin>
                </ComboBox>
            </children>
            <padding>
                <Insets right="8.0" />
            </padding>
        </GridPane>
        <VBox fx:id="appointmentListingVBox">
            <children>
                <ComboBox fx:id="appointmentsFilterComboBox" maxWidth="1.7976931348623157E308" styleClass="formLabeledControl" />
