<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="600.0" prefWidth="900.0" styleClass="translucentGrayBg" stylesheets="@../../defaultStyles.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" styleClass="popup-container" BorderPane.alignment="CENTER">
            <center>
                <ScrollPane pannable="true" styleClass="popup-content-center">
                    <content>
                        <VBox fx:id="appointmentAlertsVBox" spacing="8.0" />
                    </content>
                    <padding>
                        <Insets right="8.0" />
                    </padding>
                </ScrollPane>
            </center>
            <top>
                <Label styleClass="popup-heading" text="%appointmentReminder" BorderPane.alignment="CENTER" />
            </top>
            <bottom>
                <ButtonBar styleClass="popup-content-footer" BorderPane.alignment="CENTER">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#onDismissAllAppointmentAlerts" text="%dismissAll" />
                    </buttons>
                </ButtonBar>
            </bottom>
            <effect>
                <DropShadow offsetX="10.0" offsetY="10.0" />
            </effect>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </BorderPane>
    </center>
</fx:root>
